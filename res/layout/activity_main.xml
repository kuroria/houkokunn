<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/hyouzi2"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.29"
        android:text="保庫くん(仮)" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:id="@+id/reitoukokounyuu"
            android:layout_width="267dp"
            android:layout_height="148dp"
            android:layout_gravity="fill"
            android:gravity="center_vertical|center_horizontal|top|start|end|clip_vertical|fill_horizontal|bottom"
            android:text="　　　　　冷凍庫　　　　　　　　　　タッチ" />

        <Button
            android:id="@+id/reitoukosyouhi"
            android:layout_width="267dp"
            android:layout_height="218dp"
            android:layout_gravity="fill"
            android:gravity="center_vertical|center_horizontal|start|clip_vertical|bottom|left|right|fill|fill_horizontal|clip_horizontal|end|top|fill_vertical"
            android:text="　　　　　冷凍庫　　　　　　　　　　タッチ" />

    </LinearLayout>

</LinearLayout>